{
  "name": "tiny-buildtools",
  "version": "1.0.0",
  "description": "Build tools for Tiny website",
  "scripts": {
    "css:watch": "tailwindcss -i ./style.css -o ../html/static/css/style.css --watch",
    "css:build": "tailwindcss -i ./style.css -o ../html/static/css/style.css --minify",
    "react:watch": "webpack --mode development --watch",
    "react:build": "webpack --mode production",
    "watch": "concurrently \"npm run css:watch\" \"npm run react:watch\"",
    "build": "npm run css:build && npm run react:build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^9.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  }
}
